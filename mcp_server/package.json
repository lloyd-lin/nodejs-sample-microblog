{
  "name": "@nodejs-microblog/mcp-server",
  "version": "1.0.0",
  "description": "MCP Server with Word document reading and resume analysis functionality",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "rimraf dist && tsc",
    "dev": "ts-node src/index.ts",
